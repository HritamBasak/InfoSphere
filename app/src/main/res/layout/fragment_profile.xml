<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prof_userImage_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="100dp"
        app:cardElevation="3dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent">

        <ImageView
            android:id="@+id/prof_userImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:src="@drawable/proff" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sc_bold"
        android:gravity="center"
        android:text="User Profile"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/prof_userName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_info"
        android:drawableLeft="@drawable/resize_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/anek_bangla_semibold"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_userEmail"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_info"
        android:drawableLeft="@drawable/resize_iconnn"
        android:drawablePadding="10dp"
        android:fontFamily="@font/anek_bangla_semibold"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="14sp" />

</LinearLayout>